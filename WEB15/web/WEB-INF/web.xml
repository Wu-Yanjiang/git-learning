<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>DemoServlet</servlet-name>
        <servlet-class>com.itheima.demo.DemoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LineServlet</servlet-name>
        <servlet-class>com.itheima.line.LineServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HeaderServlet</servlet-name>
        <servlet-class>com.itheima.header.HeaderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RefererServlet</servlet-name>
        <servlet-class>com.itheima.header.RefererServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContentServlet</servlet-name>
        <servlet-class>com.itheima.content.ContentServlet</servlet-class>
    </servlet>



    <servlet-mapping>
        <servlet-name>ContentServlet</servlet-name>
        <url-pattern>/content</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RefererServlet</servlet-name>
        <url-pattern>/referer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HeaderServlet</servlet-name>
        <url-pattern>/header</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LineServlet</servlet-name>
        <url-pattern>/line</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DemoServlet</servlet-name>
        <url-pattern>/demo</url-pattern>
    </servlet-mapping>
</web-app>